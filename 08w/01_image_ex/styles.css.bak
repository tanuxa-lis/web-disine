figure{
	float: right;
	width: 222px;
	margin: 15px 10px 5px 10px;
}
figure img {
	border: 1px solid #156;
	background-color: #567;
	padding: 10px;
}
figure figcaption{
	background-image: linear-gradient(to bottom, #4544, white);
	border: 1px dashed #2300;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 1em;
	font-weight: bold;
	color: #895;
	padding: 5px;
	text-align: center;
	margin-top:-4px;
}

figure.new{
	float: left;
	width: 256px;
	margin: 15px 18px 5px 10px;
}
figure.new img {
	border: 1px solid #FF1493;
	background-color: #FFC0CB;
	padding: 18px;
}
figure.new figcaption{
	background-image: linear-gradient(to bottom, #8B008B, #00BFFF);
	border: 4px dashed #FF00FF;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 1em;
	font-weight: bold;
	color: #000000;
	padding: 8px;
	text-align: center;
	margin-top:-4px;
	margin-right: 18px;
}

